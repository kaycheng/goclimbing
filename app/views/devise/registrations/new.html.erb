<div class="col-lg-8 offset-lg-2 col-md-8 offset-md-2 col-sm-10 offset-sm-1">
  <h2>Sign Up</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="form-group">
      <%= f.label :username, "Username", class: "label-text" %><br />
      <%= f.text_field :username, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :avatar, "Avatar", class: "label-text" %><br />
      <%= f.file_field :avatar %>
    </div>
    
    <div class="form-group">
      <%= f.label :email, "Email", class: "label-text" %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :password, "Password", class: "label-text"%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> at less letters or numbers)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm Password", class: "label-text" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-info" %>
    </div>
    <% end %>
    
  <%= render "devise/shared/links" %>

</div>
