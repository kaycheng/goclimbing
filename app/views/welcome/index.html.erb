<% content_for :navbar do %>
  <%= render 'shared/root_navbar' %>
<% end %>
<h1>Hi</h1>

<!-- 所有的events -->
<% @events.each do |event| %>
  <% if event.date > Time.now %>
    <div class="content">
      <%= link_to event_path(event) do %>
        <%= event.user.username %>
        <%= event.title %>
        <%= event.date %>
        <%= event.location %>
        <%= event.gather_location %>
        <%= simple_format(event.content).truncate(150) %>
        <%= event.note %>
        次數： <%= event.event_count %>
      <% end %>
      
      <%= render partial: "shared/participate", locals: { event: event } %>
    </div>
  <% end %>
<% end %>

