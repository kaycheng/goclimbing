<h2><%= @event.title %></h2>
<p>開團者：<%= link_to @event.user.username, user_page_path(@event.user.username) %></p>
<p>日期：<%= @event.date %></p>
<p>目標山：<%= @event.location %></p>
<p>集合地點：<%= @event.gather_location %></p>
<p>內容：<%= @event.content %></p>
<p>提醒事項：<%= @event.note %></p>

<% if user_signed_in? %>
  <% if current_user == @event.user %>
    <%= link_to "修改", edit_event_path(@event) %> |
    <%= link_to "刪除", event_path(@event), method: :delete,
        data: { confirm: "確定刪除？" } %>
  <% else %>
    <% if @event.is_participated?(current_user) %>
      <%= link_to "不參加", unparticipated_event_path(@event), method: :post,
                           class: "btn btn-primary" %>
    <% else %>
      <%= link_to "參加", participated_event_path(@event), method: :post,
                         class: "btn btn-info" %>
    <% end %>
  <% end %>
<% end %>