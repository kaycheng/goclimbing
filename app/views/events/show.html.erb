<h2>
  <%= @event.title %>
  <%= render partial: "shared/participate", locals: { event: @event } %>
</h2>
<p>開團者：<%= link_to @event.user.username, user_page_path(@event.user.username) %></p>
<p>日期：<%= @event.date %></p>
<p>目標山：<%= @event.location %></p>
<p>集合地點：<%= @event.gather_location %></p>
<p>內容：<%= @event.content %></p>
<p>提醒事項：<%= @event.note %></p>
<p>Participates：<%= @event.participates.size %></p>


<% if user_signed_in? && current_user == @event.user %>
  <%= link_to "修改", edit_event_path(@event) %> |
  <%= link_to "刪除", event_path(@event), method: :delete,
      data: { confirm: "確定刪除？" } %>
<% end %>

<hr>

<!-- Comments -->
<div class="row justify-content-md-center">
  <div class="col-6">
    <section class="comments">
      <h2>Comment</h2>
      <%= render "comment_area", event: @event, comment: @comment %>
      <section class="comment-list">
        <%= render partial: "comment", collection: @comments %>
      </section>
    </section>
  </div>
</div>